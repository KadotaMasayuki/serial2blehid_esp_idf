# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# General settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# Source code files
[*.{c,cxx,cpp,h,hxx,hpp,java,m,mm,py,swift,xsl}]
indent_style = space

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefiles
[{Makefile,*.mk}]
trim_trailing_whitespace = false

# Patch files
[*.patch.*]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2
indent_style = space
